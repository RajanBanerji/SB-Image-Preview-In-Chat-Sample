<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/horizontal_list_item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="horizontal list item image"
        android:src="@drawable/profile_thumbnail" />

    <TextView
        android:id="@+id/horizontal_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>
    <TextView
    android:id="@+id/horizontal_list_item_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:text="Image Desc"/>



</LinearLayout>