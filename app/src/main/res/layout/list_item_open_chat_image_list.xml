<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/text_open_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="February 22nd"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_open_chat_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/text_open_chat_date"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:src="@drawable/profile_placeholder"
        android:contentDescription="@string/open_channel_chat_content_desc_profile" />

    <TextView
        android:id="@+id/text_open_chat_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_open_chat_date"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/image_open_chat_profile"
        android:text="Terry"
        android:textColor="#3a414d"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_open_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_open_chat_nickname"
        android:layout_alignLeft="@id/text_open_chat_nickname"
        android:text="Uploaded a file:"
        android:textColor="#999999"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/text_open_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_open_chat_nickname"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/text_open_chat_nickname"
        android:text="11:36"
        android:textColor="#bebed1"
        android:textSize="10sp" />


    <com.example.testappsyncmanager.ui.view.HorizontalImageListView
        android:id="@+id/open_chat_item_horizontal_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_open_chat_message"
        android:layout_alignStart="@id/text_open_chat_message"
        android:layout_marginTop="8dp"
        android:background="@drawable/open_chat_file_background"
        android:padding="8dp" />

</RelativeLayout>
